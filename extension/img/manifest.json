{
    "name": "Phân tích từ khóa - Keyword Planner",
    "short_name": "Keyword Planner - FFF",
    "version": "1.0.2",
    "manifest_version": 2,
    "permissions": [
        "storage"
    ],
    "homepage_url": "https://fff.com.vn",
    "icons": {
        "128": "img/icon128.png",
        "16": "img/icon16.png",
        "48": "img/icon48.png"
    },
    "description": "Cung cấp đầy đủ các chỉ số quan trọng như: khối lượng tìm kiếm, độ khó từ khóa, mức độ cạnh tranh, dự báo nhu cầu tìm kiếm  ...    ",
    "browser_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "24": "img/icon24.png",
            "32": "img/icon32.png"
        },
        "default_popup": "html/popup.html",
        "default_title": "Cộng cụ phân tích từ khóa"
    },
    "background": {
        "persistent": false,
        "scripts": [
            "js/lib/jquery.min.js",
            "js/shared.min.js",
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "js": [
                "js/lib/jquery.min.js",
                "js/shared.min.js",
                "js/content.js"
            ],
            "css": [
                "css/content.css"
            ],
            "matches": [
                "*://*.google.com/*",
                "*://google.com/*"
            ]
        }
    ]
}